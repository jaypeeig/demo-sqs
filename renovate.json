{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":semanticCommits"
  ],
  "baseBranchPatterns": [
    "main"
  ],
  "labels": [
    "dependencies"
  ],
  "rebaseWhen": "behind-base-branch",
  "automergeStrategy": "merge-commit",
  "branchConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "separateMinorPatch": true,
  "packageRules": [
    {
      "matchBaseBranches": [
        "main"
      ],
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ]
    },
    {
      "groupName": "linters",
      "matchPackageNames": [
        "/eslint/",
        "/prettier/"
      ]
    }
  ]
}
